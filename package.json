{
	"name": "shaderlabformatter",
	"displayName": "ShaderLabFormatter",
	"description": "An VSCode plugin for formatting of Unity ShaderLab",
	"version": "0.4.4",
	"engines": {
		"vscode": "^1.100.0"
	},
	"author": {
		"name": "LiteFeel"
	},
	"publisher": "litefeel",
	"homepage": "https://github.com/litefeel/ShaderLabFormatter",
	"repository": {
		"type": "git",
		"url": "https://github.com/litefeel/ShaderLabFormatter.git"
	},
	"bugs": "https://github.com/litefeel/ShaderLabFormatter/issues",
	"categories": [
		"Formatters",
		"Other",
		"Programming Languages"
	],
	"keywords": [
		"formatter",
		"shaderlab",
		"unity"
	],
	"icon": "images/icon.png",
	"activationEvents": [
		"onLanguage:shader",
		"onLanguage:hlsl"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "UnityShader",
				"extensions": [
					".shader"
				],
				"configuration": "./language-configuration.json"
			},
			{
				"id": "shaderlab",
				"aliases": [
					"ShaderLab"
				],
				"extensions": [
					".shader"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "ShaderLab Formatter",
			"properties": {
				"shaderlabformatter.indentation.conditionMacro": {
					"enum": [
						"dont",
						"indent",
						"normal"
					],
					"type": "string",
					"default": "indent",
					"description": "indentation for condition macro."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.100.0",
		"@types/glob": "^8.0.0",
		"@types/mocha": "^10.0.0",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"eslint": "^8.26.0",
		"glob": "^8.0.3",
		"mocha": "^10.8.2",
		"typescript": "^4.8.4",
		"ts-loader": "^9.4.1",
		"webpack": "^5.104.1",
		"webpack-cli": "^4.10.0",
		"@vscode/test-electron": "^2.2.0"
	}
}