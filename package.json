{
	"name": "shaderlabformatter",
	"displayName": "ShaderLabFormatter",
	"description": "An VSCode plugin for formatting of Unity ShaderLab",
	"version": "0.5.0",
	"engines": {
		"vscode": "^1.100.0"
	},
	"author": {
		"name": "LiteFeel"
	},
	"publisher": "litefeel",
	"homepage": "https://github.com/litefeel/ShaderLabFormatter",
	"repository": {
		"type": "git",
		"url": "https://github.com/litefeel/ShaderLabFormatter.git"
	},
	"bugs": "https://github.com/litefeel/ShaderLabFormatter/issues",
	"categories": [
		"Formatters",
		"Other",
		"Programming Languages"
	],
	"keywords": [
		"formatter",
		"shaderlab",
		"unity"
	],
	"icon": "images/icon.png",
	"activationEvents": [
		"onLanguage:shader",
		"onLanguage:hlsl"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "UnityShader",
				"extensions": [
					".shader"
				],
				"configuration": "./language-configuration.json"
			},
			{
				"id": "shaderlab",
				"aliases": [
					"ShaderLab"
				],
				"extensions": [
					".shader"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "ShaderLab Formatter",
			"properties": {
				"shaderlabformatter.indentation.conditionMacro": {
					"enum": [
						"dont",
						"indent",
						"normal"
					],
					"type": "string",
					"default": "indent",
					"description": "indentation for condition macro."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "npm run check-types && npm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "npm run check-types && npm run lint && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"check-types": "tsc --noEmit",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.100.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"typescript-eslint": "^8.52.0",
		"eslint": "^9.39.2",
		"esbuild": "^0.27.2",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.9.3",
		"@vscode/test-cli": "^0.0.12",
		"@vscode/test-electron": "^2.5.2"
	}
}