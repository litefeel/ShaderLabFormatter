{
	"name": "shaderlabformatter",
	"displayName": "ShaderLabFormatter",
	"description": "An VSCode plugin for formatting of Unity ShaderLab",
	"version": "0.4.1",
	"engines": {
		"vscode": "^1.51.0"
	},
	"author": {
		"name": "LiteFeel"
	},
	"publisher": "litefeel",
	"homepage": "https://github.com/litefeel/ShaderLabFormatter",
	"repository": {
		"type": "git",
		"url": "https://github.com/litefeel/ShaderLabFormatter.git"
	},
	"bugs": "https://github.com/litefeel/ShaderLabFormatter/issues",
	"categories": [
		"Formatters",
		"Other",
		"Programming Languages"
	],
	"keywords": [
		"formatter",
		"shaderlab",
		"unity"
	],
	"icon": "images/icon.png",
	"activationEvents": [
		"onLanguage:shaderlab"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "ShaderLab Formatter",
			"properties": {
				"shaderlabformatter.indentation.conditionMacro": {
					"enum": [
						"dont",
						"indent",
						"normal"
					],
					"type": "string",
					"default": "indent",
					"description": "indentation for condition macro."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "^12.12.35",
		"@types/vscode": "^1.3.2",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"tslint": "^5.20.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"gulp": "^4.0.2"
	}
}
